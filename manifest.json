{
  "author": "Mohammad Anwar",
  "manifest_version": 3,
  "name": "Symbar",
  "version": "0.2.0",
  "description": "An easy way to access and copy symbols and accents.",
  "offline_enabled": true,
  "options_page": "settings/settings.html",

  "action": {
    "default_title": "Launch Symbar!"
  },
  "background": {
    "service_worker": "worker.js"
  },
  "permissions": ["tabs", "storage"],
  "content_scripts": [
    {
      "js": ["content.js"],
      "css": ["toolbar/content_styling.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "web_accessible_resources": [
    {
      "resources": [
        "toolbar/content_injection.html",
        "toolbar/minimize_injection.html",
        "accents.json"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}
